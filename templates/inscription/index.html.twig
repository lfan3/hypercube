{% extends 'base.html.twig' %}

{% block title %}Inscription InscriptionController!{% endblock %}
{# 
{% block stylesheets %}{{ include('sharing/style.html.twig') }}{% endblock %}
{% block nav %}{{ include('sharing/nav.html.twig') }}{% endblock %} #}
{% block javascripts %}
  {{ parent() }}
  {{ encore_entry_script_tags('test') }}
{% endblock %}

{% block body %}
{# {% form_theme form 'bootstrap_4_layout.html.twig' %} #}

<div class="wrapper wrapper--inscription">

  <div id='inscription-avatar-container' class="avatar d-flex flex-row justify-content-end">
    <img src="{{asset("avatars/default.png")}}" alt="profile-image" class="avatarImg" id='profile-photo'>
    <!-- <button type="button" class="btn btn-warning" data-toggle="modal" id="edit-photo-btn">
      Edit Photo
    </button> -->
    <div class="custom-file" id="custom-file">
      <form data-url="{{ path("inscription_test") }}" name="photo" method="post" class="profile-avatar-form" enctype="multipart/form-data">
        <input type="file" id="user_photo_inscription" name="avatarImg" required="required" placeholder="Select a new avatar" class="custom-input, custom-file-input" />
        <label for="user_photo_avatar" lang="en"  class="custom-label">
          Select a new avatar
        </label>

        <div class="form-error"></div>

        <div class="form-row">
          <div class="col align-self-center">
            <button type="submit" class="btn btn-primary">Save changes</button>
          </div>
        </div>
      </form>
    </div>
  </div>

  {{ form_start(form, {
    'attr':{
      'class': 'profile-avatar-form'
    }})
   }}
  
      {{form_row(form.username)}}
      {{form_row(form.firstname)}}
      {{form_row(form.lastname)}}
      {{form_row(form.email)}}
      {{ form_label(form.password) }}
      {{ form_widget(form.password) }}
      <small class="form-text text-helper"><i class="fa fa-exclamation-triangle text-danger"></i> At least one digit  one lowercase  one uppercase  one special character from <strong>!*.@#$%^&(){}[]:;<>,.?/\~_+-=| </strong>6-15 in lengh</small>
      <div class="mt-2">
        {{form_row(form.verifPassword)}}
      </div>

      <div class="form-row">
        <div class="col align-self-center">
          <input type="submit"/ class="btn btn-primary mt-5 col align-self-center">
        </div>
      {{ form_end(form) }}
      </div>
</div>
{% endblock %}
